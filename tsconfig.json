{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "types": [
      "node"
    ],
    "lib": [
      "es2020",
      "esnext.asynciterable"
    ],
  },
}
